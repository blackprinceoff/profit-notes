<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.profitnotes.controller.MainController">
  <padding>
    <Insets top="15" right="15" bottom="15" left="15"/>
  </padding>

  <Label text="Курс:" fx:id="exchangeRateLabel"/>

  <TextArea fx:id="noteTextArea" promptText="Кількість +" prefRowCount="2" prefWidth="300"/>

  <HBox spacing="10">
    <TextField fx:id="usdtField" promptText="Сума в USDT" prefWidth="140"/>
    <DatePicker fx:id="datePicker" promptText="Оберіть дату" prefWidth="160"/>
  </HBox>

  <HBox spacing="10">
    <Button fx:id="addButton" text="Додати" onAction="#onAddClicked" prefWidth="120"/>
    <Button fx:id="deleteButton" text="Видалити вибране" onAction="#onDeleteClicked" prefWidth="180" styleClass="delete-button"/>
  </HBox>

  <HBox spacing="10" alignment="CENTER_LEFT">
    <Label text="Період:"/>
    <ComboBox fx:id="periodComboBox" prefWidth="160" onAction="#onPeriodChanged">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <String fx:value="Усі"/>
          <String fx:value="Останні 7 днів"/>
          <String fx:value="Останні 30 днів"/>
        </FXCollections>
      </items>
    </ComboBox>
  </HBox>


  <TableView fx:id="notesTable">
    <columns>
      <TableColumn fx:id="indexColumn" text="День" prefWidth="60"/>
      <TableColumn fx:id="textColumn" text="Кількість +" prefWidth="80"/>
      <TableColumn fx:id="usdtColumn" text="USDT" prefWidth="100"/>
      <TableColumn fx:id="uahColumn" text="UAH" prefWidth="100"/>
      <TableColumn fx:id="dateColumn" text="Дата" prefWidth="120"/>
    </columns>
  </TableView>

  <Label fx:id="totalProfitLabel" text="Загалом: 0 USDT / 0 UAH" style="-fx-font-weight: bold;"/>
</VBox>
